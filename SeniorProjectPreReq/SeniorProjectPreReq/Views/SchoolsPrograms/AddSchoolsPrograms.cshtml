@model SeniorProjectPreReq.Models.SchoolsProgram

@{
    ViewBag.Title = "AddSchoolsPrograms";
    var programs = (IEnumerable<SelectListItem>)ViewData["ProgramsList"];
    var schoolName = (string)ViewData["SchoolName"];
    var schoolID = (int)ViewData["SchoolID"]; 
}

<h2>AddSchoolsPrograms</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SchoolsProgram</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.school, schoolName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.HiddenFor(m => m.SchoolID, new { Value = schoolID }) 
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Programs, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.ListBoxFor(m => m.ProgramID, programs, new { id = "myList" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProgramID, "ProgramID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
