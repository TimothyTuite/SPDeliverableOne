@model SeniorProjectPreReq.Models.FormModels.AddProgram
@{
    ViewBag.Title = "AddPrograms";
    var programs = (IEnumerable<SelectListItem>)ViewData["newPrograms"];
}

<h2>Add Programs for @Model.schoolName for the school year beginning in @Model.Year</h2>
<h3>@Model.schoolID.ToString()</h3>
<h4>@ViewBag.message</h4>
@using (Html.BeginForm("addPrograms", "Principal", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div>
    @Html.HiddenFor(x=> x.schoolID,Model.schoolID)
    @Html.HiddenFor(x=> x.Year,Model.Year)
    @Html.HiddenFor(x=> x.SelectedPrograms,Model.SelectedPrograms)
    @Html.HiddenFor(x=>x.previousPrograms,Model.previousPrograms)
    @Html.HiddenFor(x=>x.schoolName,Model.schoolName)
    @Html.HiddenFor(x=>x.ThePrograms,Model.ThePrograms)
   @Html.ListBoxFor(x => x.SelectedPrograms, new MultiSelectList(Model.ThePrograms, "Value", "Text"), new { Multiple = "multiple" } )
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="AddPrograms" />
        </div>
    </div>

</div>
}
