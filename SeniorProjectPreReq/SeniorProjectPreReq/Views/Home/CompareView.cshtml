@model SeniorProjectPreReq.Models.CompareViewModel
@{
    ViewBag.Title = "CompareView";
}

<h2>CompareView<</h2>

<div class="row">
    @if (Model.schoolOne != null)
    {
        <div class="col-md-4">
            <div>
                <h4>SchoolPdata</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.schoolOne.generalSchoolData.SchoolName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.schoolOne.generalSchoolData.type)
                    </dd>

                    <dd>
                        @Html.DisplayFor(model => model.schoolOne.generalSchoolData.SchoolAddress)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.schoolOne.generalSchoolData.SchoolPrincipal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.schoolOne.generalSchoolData.SchoolPhone)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.schoolOne.generalSchoolData.SchoolWebsite)
                    </dt>
                </dl>

                <h4>Metrics</h4>
                <dl class="dl-horizontal">
                    @foreach (var i in Model.schoolOne.allMetrics)
                    {
                        <dd>
                            @Html.Display(i.MetricName)
                        </dd>
                        <dd>
                            @Html.Display(i.Description)
                        </dd>
                    }
                </dl>

                <h4>Programs</h4>
                <dl class="dl-horizontal">
                    @foreach (var i in Model.schoolOne.allPrograms)
                    {
                        <dd>
                            @Html.Display(i.programName)
                        </dd>
                        <dd>
                            @Html.Display(i.programDescription)
                        </dd>
                    }
                </dl>

            </div>
        </div>
    }
</div>

