@model SeniorProjectPreReq.Models.mainPageViewModel
@using SeniorProjectPreReq.Models
@{
    ViewBag.Title = "JPEF School Portal";
}
<script>
    // john
    //you want to grab all the elements by id and update them
    //<h1 id="schoolName"></h1>
    //would be $("#schoolName").innerHTML = schoolData.schoolName;

    function getApiData(id) {
        var schoolData
        var bullshit = $.ajax({
            url: "../API/School/" + id,
            success: function (data) {
                schoolData = data
                console.log('success', data)
                $("#schoolName").text(schoolData.schoolName);
                $("#schoolAddress").text(schoolData.Address);
                $("#schoolPhone").text(schoolData.Phone);
                $("#schoolWebsite").text(schoolData.Website);
                $("#schoolPrincipal").text(schoolData.Principal);
            }
        })


    }
</script>
<br />

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/img/1_12.jpg" style="width:100%" class="img-responsive">
            <div class="carousel-caption">
                <h1>1 - 12</h1>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/Elementry.jpg">
            <div class="carousel-caption">
                <h1>1 - 5</h1>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/MiddleSchool.jpg">
            <div class="carousel-caption">
                <h1>6 - 8</h1>
                <p></p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/HighSchools.jpg">
            <div class="carousel-caption">
                <h1>9 - 12</h1>
                <p></p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />

<div class="row">
    <div class="col-sm-2">
        <a class="btn btn-info btn-block" style="background-color:#33C2DA" href="">Collaborative Schools</a>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-info btn-block" style="background-color:#33C2DA" href="">Elementry Schools</a>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-info btn-block" style="background-color:#33C2DA" href="">Middle Schools</a>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-info btn-block" style="background-color:#33C2DA" href="">High Schools</a>
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
            </span>
            <input type="text" class="form-control" placeholder="Search for...">

        </div>
    </div>
</div>

<br />

<div class="row" style="height: 390px;">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body" style="height: 400px">
                <h2 id="schoolName">School Data</h2>
                <dl>
                    <dt>
                        @Html.DisplayNameFor(x => Model.schoolList.First().SchoolAddress)
                    </dt>
                    <dd id="schoolAddress">
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(x => Model.schoolList.First().SchoolPhone)
                    </dt>
                    <dd id="schoolPhone">
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(x => Model.schoolList.First().SchoolWebsite)
                    </dt>
                    <dd id="schoolWebsite">
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(x => Model.schoolList.First().SchoolPrincipal)
                    </dt>
                    <dd id="schoolPrincipal">
                    </dd>
                </dl>

               @* @Html.ActionLink("View their Profile!", "AllDetails", "SchoolPdatas", new { id = Model.schoolList. }, new { @class = "btn btn-primary btn-large" })*@

            </div>
        </div>
    </div>
    <div class="col-md-8 text-center">
        @using (Html.BeginForm())
        {
            <div class="container fluid">
                <!-- /input-group -->
                <div style="height: 380px; overflow-y: scroll;">
                
                        <ul class="list-group">
                            @foreach (var item in Model)
                            {
                                <li onclick="getApiData(@item.ID)" class="list-group-item">@Html.DisplayFor(x => item.SchoolName)<input style="float: right;" type="checkbox" name="compare" value="@item.ID"></li>
                                //onclick(callDataApi(item.ID)
                            }
                        </ul>
                        
                    
                </div>
            </div>
            <input type="submit" value="Compare" class="btn btn-primary btn-large" style="background-color:#33C2DA" />
        }
    </div>

</div>